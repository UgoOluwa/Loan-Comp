@model Loan_Comp.Models.CompanyViewModel

@{
    ViewBag.Title = "AddCompany";
}

@if (ViewBag.ErrorMessage != null)
{
    if (ViewBag.ErrorMessage == "Company was added Successfully")
    {
        <div>
            <h3 style="color:aquamarine">@ViewBag.ErrorMessage</h3>
        </div>
    }
    else
    {
        <div>
            <h3 style="color:crimson">@ViewBag.ErrorMessage</h3>
        </div>
    }

}

<h2>AddCompany</h2>

